{
    "name": "dcdesignweek.org",
    "version": "1.0.0",
    "description": "",
    "main": "index.js",
    "scripts": {
        "build": "npm-run-all build:*",
        "build:eleventy": "npm run clean && eleventy",
        "build:sass": "sass source/assets/styles:source/_includes/",
        "commit": "cz",
        "clean": "rm -rf public",
        "cms": "npx netlify-cms-proxy-server",
        "start": "npm-run-all build:sass --parallel watch:*",
        "watch:sass": "sass --watch source/assets/styles:source/_includes/",
        "watch:eleventy": "npm run clean && eleventy --serve"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/AIGAdc/dcdesignweek.org.git"
    },
    "author": "Marcus Relacion",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/AIGAdc/dcdesignweek.org/issues"
    },
    "homepage": "https://github.com/AIGAdc/dcdesignweek.org#readme",
    "devDependencies": {
        "@11ty/eleventy": "^0.12.1",
        "@11ty/eleventy-cache-assets": "^2.2.1",
        "clean-css": "^4.2.3",
        "commitizen": "^4.2.4",
        "cz-conventional-changelog": "^3.2.0",
        "dotenv": "^10.0.0",
        "gorko": "^0.4.1",
        "html-minifier": "^4.0.0",
        "js-yaml": "^3.14.1",
        "npm-run-all": "^4.1.5",
        "sass": "^1.34.0"
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog"
        }
    }
}
